<form id="upload-file-form" asp-controller="File" asp-action="Upload" asp-antiforgery="true" enctype="multipart/form-data">
	<input id="upload-file-input" type="file" name="file" accept="image/*" class="hidden" />
</form>

<script type="text/javascript" language="javascript">

	function requestUpload(successFunc, errorFunc) {

		$('#upload-file-input').change(function () {

			$('#upload-file-form').ajaxSubmit({
				success: successFunc,
				error: errorFunc
			});
		});

		$('#upload-file-input').click();
	}

</script>