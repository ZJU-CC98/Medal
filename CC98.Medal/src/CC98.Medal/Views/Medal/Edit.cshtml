@using System.Globalization
@model Medal
@{
	ViewBag.PageTitle = string.Format(CultureInfo.CurrentUICulture, "编辑勋章 - {0}", Model.Name);
}

<form asp-controller="Medal" asp-action="Edit" method="post" asp-antiforgery="true">

	@await Html.PartialAsync("_EditPartial")

	<hr/>
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<button type="submit" class="btn btn-default btn-primary">确认修改</button>
	<button type="reset" class="btn btn-default">撤销更改</button>

</form>

@await Html.PartialAsync("_UploadFilePartial")